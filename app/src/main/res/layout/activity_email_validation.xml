<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEBED"
    android:backgroundTint="#EAE9EC"
    tools:context=".EmailValidation">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="154dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:gravity="center|fill"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">


        <EditText
            android:id="@+id/x1"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="@string/validation_code2"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="#454545"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#74000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/x2"
            app:layout_constraintEnd_toStartOf="@+id/x2"
            app:layout_constraintHorizontal_bias="0.887"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/x2"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/x2"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="@string/validation_code2"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="#454545"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#74000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/x6"
            app:layout_constraintEnd_toStartOf="@+id/x6"
            app:layout_constraintHorizontal_bias="0.915"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/x6"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/x3"
            android:layout_width="24dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="@string/validation_code2"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="#454545"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#74000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.552"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <EditText
            android:id="@+id/x4"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="@string/validation_code2"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="#454545"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#74000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/x3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toEndOf="@+id/x3"
            app:layout_constraintTop_toTopOf="@+id/x3" />

        <EditText
            android:id="@+id/x5"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="@string/validation_code2"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="#454545"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#74000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/x4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintStart_toEndOf="@+id/x4"
            app:layout_constraintTop_toTopOf="@+id/x4"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/x6"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="@string/validation_code2"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="#454545"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#74000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/x3"
            app:layout_constraintEnd_toStartOf="@+id/x3"
            app:layout_constraintHorizontal_bias="0.953"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/x3"
            app:layout_constraintVertical_bias="1.0" />
    </LinearLayout>

    <Button
        android:id="@+id/confirm"
        android:layout_width="165dp"
        android:layout_height="53dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#3F51B5"
        android:text="@string/confirm"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.378" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="382dp"
        android:layout_height="452dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/validation" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="392dp"
        android:text="@string/validation_ms2"
        android:textAlignment="center"
        android:textColor="#3C3C3C"
        android:textColorHighlight="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/resend"
        android:textColor="#323232"
        android:textColorHighlight="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/resend_link"
        android:layout_width="69dp"
        android:layout_height="28dp"
        android:layout_marginStart="10dp"
        android:linksClickable="true"
        android:text="@string/resend2"
        android:textColor="#3F51B5"
        android:textColorHighlight="#FFFFFF"
        android:textColorLink="#673AB7"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.466" />



</androidx.constraintlayout.widget.ConstraintLayout>